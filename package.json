{
  "name": "yggjs_rlayout",
  "version": "0.1.2",
  "description": "React layout components library for professional page layout development.",
  "author": "源滚滚 <1156956636@qq.com>",
  "license": "PolyForm-Noncommercial-1.0.0",
  "type": "module",
  "main": "./src/index.ts",
  "module": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./src/index.ts",
      "require": "./src/index.ts"
    },
    "./tech": {
      "types": "./src/tech/index.ts",
      "import": "./src/tech/index.ts",
      "require": "./src/tech/index.ts"
    }
  },
  "files": [
    "dist",
    "src",
    "README.md",
    "LICENSE"
  ],
  "sideEffects": false,
  "engines": {
    "node": ">=18"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.3.1",
    "@types/node": "^24.3.0",
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "eslint": "^9.5.0",
    "jsdom": "^24.1.0",
    "prettier": "^3.3.2",
    "rollup-plugin-visualizer": "^6.0.3",
    "terser": "^5.43.1",
    "tsup": "^8.0.2",
    "typescript": "^5.5.2",
    "vite": "^7.1.3",
    "vitest": "^3.2.4"
  },
  "scripts": {
    "dev:example": "vite",
    "dev:lib": "tsup --watch",
    "build": "tsup",
    "build:analyze": "tsup && open dist/bundle-analysis.html",
    "bundle:size": "ls -la dist/index.js dist/tech/index.js dist/tech/index.css | awk '{print $9, $5}'",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint .",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "prepublishOnly": "npm run build && npm run test && node scripts/prepare-publish.js",
    "postpublish": "node scripts/restore-dev.js"
  }
}
